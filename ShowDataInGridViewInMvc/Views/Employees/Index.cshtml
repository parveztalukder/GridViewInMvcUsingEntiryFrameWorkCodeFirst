@model IEnumerable<ShowDataInGridViewInMvc.ViewModel.EmployeeViewModel>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;font-size:30px;color:darkblue;margin-top:10px;">Employee Salary Statement</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(c => c.Id).Titled("Employee ID").Filterable(true);
    Columns.Add(c => c.Name).Titled("Name").Filterable(true);
    Columns.Add(c => c.Gender).Titled("Gender").Filterable(true);
    Columns.Add(c => c.Basic).Titled("Basic").Filterable(true);
    Columns.Add(c => c.Medical).Titled("Medical").Filterable(true);
    Columns.Add(c => c.Travel).Titled("Travel").Filterable(true);
    Columns.Add(c => c.Provident).Titled("Provident").Filterable(true);
    Columns.Add(c => c.Tax).Titled("Tax").Filterable(true);
    Columns.Add(c => c.Deduction).Titled("Deduction").Filterable(true);
    Columns.Add(c => c.GrossSalary).Titled("Gross Salary").Filterable(true);
    Columns.Add(c => c.NetSalary).Titled("Net Salary").Filterable(true);
    Columns.Add().Titled("Edit").Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.Id }));
    Columns.Add().Titled("Delete").Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.Id }));

}).WithPaging(8).Sortable(true)
</div>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>